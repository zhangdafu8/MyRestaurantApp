<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp"
    android:background="@drawable/item_bg"
    >

    <ImageView
        android:id="@+id/itemOrderImage"
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/item_image"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/itemOrderImage"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        >
        <TextView
            android:id="@+id/itemOrderRestaurantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="小慕餐厅"
            android:textSize="15dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/itemOrderLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:maxLines="2"
            android:text="小慕餐厅全是好吃的！"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/itemOrderPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/itemOrderImage"
        android:layout_toRightOf="@id/itemOrderImage"
        android:layout_marginLeft="10dp"
        android:text="30元"
        android:textColor="@color/orange"
        />


</RelativeLayout>
